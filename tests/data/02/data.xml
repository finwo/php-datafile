<?xml version='1.0' encoding="utf-8" ?>
<data>
    <site>
        <title>Example Config</title>
        <domain>example.com</domain>
        <languages>
            <default>nl</default>
            <available></available>
        </languages>
        <logo>/assets/images/logo.png</logo>
        <window_target>_blank</window_target>
        <dynamic_title>false</dynamic_title>
        <dynamic_meta>false</dynamic_meta>
        <last_login>
            <min_rating>7</min_rating>
        </last_login>
        <meta>
            <description></description>
            <keywords></keywords>
            <viewport>width=device-width, initial-scale=1</viewport>
        </meta>
        <analytics>
            <use>true</use>
            <code>UA-0000000-0</code>
        </analytics>
        <default>
            <filters>
                <_0>foo</_0>
                <_0>bar</_0>
                <_1>hello</_1>
                <_1>world</_1>
            </filters>
            <orderby>date:desc</orderby>
            <orderby>name:desc</orderby>
            <orderby>rating:desc</orderby>
        </default>
        <template-options>
            <test-thumb>test/thumb-simple</test-thumb>
            <test-filter>test/filter</test-filter>
            <test-overview>test/overview_filters</test-overview>
        </template-options>
    </site>
    <development>
        <disable_cache>0</disable_cache>
        <compress_less>0</compress_less>
        <less_ttl>0</less_ttl>
    </development>
    <snapshots>
        <server>http://images.example.com</server>
        <thumb>250x150</thumb>
        <default>snapshot</default>
        <resolutions>
            <snapshot>/snapshot/:pageid/snapshot.jpg</snapshot>
            <_99x84>/snapshot/:pageid/99x84.jpg</_99x84>
            <_101x85>/snapshot/:pageid/101x85.jpg</_101x85>
            <_200x150>/snapshot/:pageid/200x150.jpg</_200x150>
            <_125x94>/snapshot/:pageid/125x94.jpg</_125x94>
        </resolutions>
    </snapshots>
    <filters>
        <date>
            <_0>&gt;2014-01-01</_0>
            <_1>&lt;2017-01-01</_1>
        </date>
        <rating>
            <_0>1-10</_0>
        </rating>
        <language>nl</language>
        <language>en</language>
        <language>de</language>
        <language>fr</language>
        <language>es</language>
        <language>it</language>
    </filters>
    <filter_presets>
        <dutch>
            <filter>
                <_0>language:nl</_0>
            </filter>
        </dutch>
        <_00_99>
            <orderby>
                <_0>age:asc</_0>
            </orderby>
        </_00_99>
        <_99_00>
            <orderby>
                <_0>age:desc</_0>
            </orderby>
        </_99_00>
    </filter_presets>
    <router>
        <home>
            <default>true</default>
            <template>index.html</template>
        </home>
        <account>
            <template>my-account.html</template>
            <requiresAuthentication>true</requiresAuthentication>
        </account>
        <messages>
            <template>inbox.html</template>
            <requiresAuthentication>true</requiresAuthentication>
        </messages>
        <error>
            <parameters>
                <errorCode>404</errorCode>
            </parameters>
            <template>error.html</template>
        </error>
    </router>
    <error>
        <_400>
            <errorCode>400</errorCode>
            <message>Route Parsing Error</message>
        </_400>
        <_404>
            <errorCode>404</errorCode>
            <message>Page Not Found</message>
        </_404>
        <_500>
            <errorCode>500</errorCode>
            <message>Internal Server Error</message>
        </_500>
    </error>
    <urls>
        <nl>
            <account>mijn-account</account>
            <messages>mijn-berichten</messages>
            <error>error/:errorCode</error>
        </nl>
        <en>
            <account>my-account</account>
            <messages>my-messages</messages>
            <error>error/:errorCode</error>
        </en>
    </urls>
    <api>
        <baseUri>http://www.example.com/api/</baseUri>
        <ttl>30</ttl>
    </api>
    <media>
        <baseUri>http://media.example.com/</baseUri>
    </media>
    <messages>
        <threads>30</threads>
        <threadsViewed>5</threadsViewed>
        <paginationButtons>5</paginationButtons>
        <minLength>1</minLength>
        <maxLength>1000</maxLength>
    </messages>
    <pagination>
        <tab_size>6</tab_size>
    </pagination>
    <styles>
        <_0>extra</_0>
        <_1>flexgrid</_1>
        <_2>global</_2>
        <_3>textsizes</_3>
        <_4>notify</_4>
    </styles>
</data>
